# Environment Variables Template
# Copy this file to .env and fill in your actual values

# ============================================
# Google Fact Check API Key
# ============================================
# Get your key at: https://developers.google.com/fact-check/tools/api/v1alpha1
# This enables fact-checking against PolitiFact, Snopes, FactCheck.org, etc.
GOOGLE_FACTCHECK_API_KEY=your_google_factcheck_api_key_here

# ============================================
# Database Configuration
# ============================================
DATABASE_URL=postgresql://truthlayer:truthlayer@db:5432/truthlayer

# ============================================
# Backend Configuration
# ============================================
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000

# ============================================
# Frontend Configuration
# ============================================
NEXT_PUBLIC_API_URL=http://localhost:8000

# ============================================
# Optional API Keys
# ============================================
# These are optional and not currently used
NEWSAPI_KEY=your_newsapi_key_here
MEDIASTACK_KEY=your_mediastack_key_here
DISCORD_WEBHOOK_URL=your_discord_webhook_url_here

# ============================================
# CORS Configuration
# ============================================
ALLOWED_ORIGINS=http://localhost:3000
